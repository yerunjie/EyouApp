<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="LauchAppTheme" parent="AppTheme">
        <!--<item name="colorPrimaryDark">@android:color/background_dark</item>-->
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <style name="recommend_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- widget -->
    <style name="CommonHLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/common_line_grey</item>
    </style>
    <style name="Base.Widget.AppCompat.Spinner.Underlined" parent="@style/Base.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/abc_spinner_textfield_background_material</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextViewSmallVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="TextViewLabelSmallVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewNormalVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="TextViewLabelNormalVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MainEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:minLines">1</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:background">@drawable/bg_edittext</item>
    </style>
</resources>
